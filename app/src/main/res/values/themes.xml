<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NextChat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!--Login-->
        <item name="textColorLogin">@color/txt_login</item>
        <item name="loginBackground">@color/login_background</item>
        <item name="textHintLogin">@color/txt_hint_login</item>
        <item name="btnLogin">@color/btn_login</item>

        <!--Perfil-->
        <item name="textHintPerfil">@color/txt_hint_login</item>
        <item name="perfilBackground">@color/login_background</item>
        <item name="btnPerfil">@color/btn_login</item>

        <!--Chat-->
        <item name="textHintChat">@color/txt_hint_chat</item>

        <!--Toolbar-->
        <item name="colorToolbarTitle">@color/title_toolbar</item>
        <item name="colorToolbarSubt">@color/subt_toolbar</item>

    </style>

    <style name="Theme.NextChat" parent="Base.Theme.NextChat" />


    <!-- AlertDialog personalizado -->
    <style name="Theme.NextChat.AlertDialog"
        parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.NextChat.AlertDialog</item>
    </style>
    <style name="ShapeAppearance.NextChat.AlertDialog"
        parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <!-- 1. Título del diálogo -->
    <style name="NextChat.AlertDialog.Title"
        parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- 2. Cuerpo del diálogo -->
    <style name="NextChat.AlertDialog.Body"
        parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="ShapeAppearance.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>